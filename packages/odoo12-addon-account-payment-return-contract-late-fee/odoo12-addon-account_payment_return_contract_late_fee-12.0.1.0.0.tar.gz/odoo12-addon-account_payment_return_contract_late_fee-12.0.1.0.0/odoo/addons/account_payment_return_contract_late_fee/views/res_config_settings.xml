<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="res_config_settings_view_form" model="ir.ui.view">
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="account.res_config_settings_view_form" />
        <field name="arch" type="xml">
            <xpath expr="//div[@id='analytic']" position="after">
                <div id="payment_return_fee">
                    <h2>Payment Return Fee</h2>
                    <div class="row mt16 o_settings_container">
                        <div id="payment_return_fee_group"
                            class="col-12 col-lg-6 o_setting_box">
                            <div class="o_setting_left_pane">
                                <field name="use_feature_fee_for_returned_payment"/>
                            </div>
                            <div class="o_setting_right_pane">
                                <label for="use_feature_fee_for_returned_payment"/>
                                <div class="text-muted">
                                    Manage fees for returned Payments on partners.
                                </div>
                                <div class="content-group" attrs="{'invisible': [('use_feature_fee_for_returned_payment','=',False)]}">
                                    <div class="row mt16">
                                        <label for="journal_return_late_fee" class="col-md-3 o_light_label"/>
                                        <field name="journal_return_late_fee" />
                                    </div>
                                    <div class="row mt16">
                                        <label for="product_return_late_fee" class="col-md-3 o_light_label"/>
                                        <field name="product_return_late_fee" />
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>
