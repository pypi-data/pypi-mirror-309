#!/bin/bash
# 检查参数
if [ "$1" == "ip" ]; then
    torchrun --nproc_per_node=$NPROC_PER_NODE --nnodes=$WORLD_SIZE --node_rank=$RANK --master_addr=$MASTER_ADDR --master_port=$MASTER_PORT  --rdzv-conf=timeout=36000 /usr/local/bin/rerank.py --use-ip-rerank
else
    torchrun --nproc_per_node=$NPROC_PER_NODE --nnodes=$WORLD_SIZE --node_rank=$RANK --master_addr=$MASTER_ADDR --master_port=$MASTER_PORT  --rdzv-conf=timeout=36000 /usr/local/bin/rerank.py
fi
